rm pp pp1
SIZE=${1:-32};
#BLOCKS=${2:-262144};
BLOCKS=${2:-65536};
#BLOCKS=${2:-1};
TIMEFORMAT="$i %lR"
./scope2 $BLOCKS $SIZE > pp
./scope2 $BLOCKS $SIZE > pp1
i=0
while cmp pp pp1 > log ; do 
	i=`expr $i + 1`
	time ./scope2 $BLOCKS $SIZE > pp1
done
cat log |(read g f e d c b a ; cat log ; echo '' ; tail -n +$a pp|head; echo '-----'; tail -n +$a pp1|head)
